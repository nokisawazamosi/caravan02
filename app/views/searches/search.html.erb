<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-10 mt-5">
      <h3>検索結果:<%= @records.count %>件</h3>
      <table class="table text-center">
        <thead>
          <tr>
            <th></th>
            <th>NAME</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% if @model == 'user' %>
          <% @records.each do |user| %>
            <tr>
              <td>
                <%= image_tag user.get_profile_image(50,50) %>
              </td>
              <td>
                <%= link_to user_path(user) do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td>
                <%= render "relationships/follow_btn", user: user %>
              </td>
            </tr>
          <% end %>
        <% elsif @model == 'blog' %>
          <%= render "blogs/index", blogs: @records %>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>