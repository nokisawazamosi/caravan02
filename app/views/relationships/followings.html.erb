<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-10 mt-5">
      <h1>FOLLOWINGS</h1>
      <table class="table text-center">
        <thead>
          <tr>
            <th></th>
            <th>NAME</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% if @users.exists? %>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= image_tag user.get_profile_image(50,50) %>
              </td>
              <td>
                <%= link_to user_path(user) do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td>
                <%= render "follow_btn", user: user %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td><p>ユーザーはいません</p></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>